<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.modeling.sample.root</artifactId>
    <packaging>pom</packaging>
    <name>Kevoree :: Modeling :: Sample :: Root</name>
    <url>https://github.com/dukeboard/kevoree-modeling-framework</url>

	<parent>
        <groupId>org.kevoree.modeling</groupId>
        <artifactId>org.kevoree.modeling.root</artifactId>
        <version>1.3.0-SNAPSHOT</version>
        <relativePath>../../org.kevoree.modeling.root/pom.xml</relativePath>
	</parent>

    <build>
        <plugins>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.9.0</version>
                <configuration>
                    <basedir>${basedir}</basedir>
                    <excludes>
                        <exclude>target/**</exclude>
                        <exclude>.idea/**</exclude>
                    </excludes>
                    <header>${basedir}/../../LICENSE_HEADER</header>
                    <strictCheck>true</strictCheck>
                    <properties>
                        <owner>Francois Fouquet</owner>
                        <year>${project.inceptionYear}</year>
                        <email>fouquet.f@gmail.com</email>
                    </properties>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
	
    <repositories>
        <repository>
            <id>sonatype-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
    </repositories>

</project>
